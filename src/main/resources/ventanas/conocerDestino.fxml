<AnchorPane prefHeight="390.0" prefWidth="510.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.agenciaDeViajes.controladores.ConocerDestinoControlador">

    <ImageView fx:id="imageView" fitHeight="200.0" fitWidth="200.0" layoutX="285.0" layoutY="101.0" />

    <TextField fx:id="txtNombreDestino" editable="false" layoutX="35.0" layoutY="121.0" prefHeight="25.0" prefWidth="230.0" promptText="Nombre del destino" />
    <TextField fx:id="txtCiudad" editable="false" layoutX="35.0" layoutY="163.0" prefHeight="25.0" prefWidth="230.0" promptText="Ciudad del destino" />
    <TextField fx:id="txtDescripcion" editable="false" layoutX="35.0" layoutY="201.0" prefHeight="25.0" prefWidth="230.0" promptText="Descripción del destino" />
