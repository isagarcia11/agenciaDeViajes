    <Button fx:id="btnAnterior" layoutX="297.0" layoutY="320.0" onAction="#navegarAnterior" text="Anterior">
      <font>
         <Font name="Franklin Gothic Medium" size="15.0" />
      </font></Button>
    <Button fx:id="btnSiguiente" layoutX="394.0" layoutY="320.0" onAction="#navegarSiguiente" text="Siguiente">
      <font>
         <Font name="Franklin Gothic Medium" size="15.0" />
      </font></Button>
   <Button fx:id="btnAtras" layoutX="35.0" layoutY="322.0" mnemonicParsing="false" onAction="#atras" text="Atrás">
