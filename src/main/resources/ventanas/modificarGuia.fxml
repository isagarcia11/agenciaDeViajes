            <Font name="Franklin Gothic Medium" size="14.0" />
         </font></Button>
      <Button fx:id="btnAtras" layoutX="22.0" layoutY="283.0" mnemonicParsing="false" onAction="#regresarInicio" prefHeight="25.0" prefWidth="128.0" text="ATRÁS">
