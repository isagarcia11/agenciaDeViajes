            <Font name="Franklin Gothic Medium" size="14.0" />
         </font></Button>
      <Button fx:id="btnEliminar" layoutX="172.0" layoutY="283.0" mnemonicParsing="false" onAction="#eliminarGuiaTuristico" prefHeight="25.0" prefWidth="127.0" text="ELIMINAR">
